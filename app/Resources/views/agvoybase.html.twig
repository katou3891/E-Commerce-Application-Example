{% extends 'base.html.twig' %}

{% block header %}
            <header>
                <div class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                               <img src="http://www.travel-reporter.net/wp-content/uploads/2015/01/logo-avion.png" alt="Accueil Symfony" style="width: 3.2em; margin-top: -1em;"/>
                            </a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">

                                {% block header_navigation_links %}
                                    <li><a href="{{ path('accueil_show') }}">Accueil</a></li>
                                    <li><a href="{{ path('presentation_show') }}">Qui sommes-nous ?</a></li>
                                    <li><a href="{{ path('circuit_index') }}" title="Voir les circuits disponibles">Circuits</a></li>
                                    <li><a href="{{ path('contact_show') }}">Contact</a></li>
                                    
                                   
                                     {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                     <li><a href="{{ path('profile_show') }}">Bienvenue {{ user.prenom }} !</a></li>
                                      <li><a href="{{ path('collaborateurs_circuit_index') }}" title="Voir tous les circuits existants">Gérer les circuits</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <li><a href="{{ path('admin_accounts_index') }}">Gérer les profils</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></li>
   								    {% else %}
                                    	<li><a href="{{ path('fos_user_security_login') }}">Se Connecter</a></li>
                                    {% endif %}
                                       
                                {% endblock %}

                            </ul>
                        </div>
                    </div>
                </div>
            </header>
{% endblock %}
       
