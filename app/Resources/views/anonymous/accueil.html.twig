                <td>{{ circuit.paysDepart }}</td>
                <td>{{ circuit.villeDepart }}</td>
                <td>{{ circuit.villeArrivee }}</td>
                <td>{{ circuit.dureeCircuit }} jours</td>
                <td>
                    
                            <a href="{{ path('circuit_show', { 'id': circuit.id }) }}">En savoir plus >></a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		</div>
		
		</div>
		
		
		
		
	<div class="col-sm-3"> 
		<div class="well"><h2>A propos	</h2><p>{# {{ presentation.apropos }} #}</p></div>
