{% block main %}
     <div id="welcome">
  	   <h1 class="text-center">Bienvenue sur le site de La meilleure Agence !</h1>
    </div>                  
	
	
	<div class="row">
		<div class="col-sm-3"> <!-- A propos -->
			<div class="well"><h2>Promotions</h2></div>
			<div class="well"><h2>Nouveautés</h2></div>
		</div>
		<div class="col-sm-6"> <!--  partie centrale -->
		<div class="well" id="search">Recherche</div>
		<div class="well"><h2>Les mieux notés</h2></div>
		 <!--  liste des cricuits -->
		 <div class="well">
		 <h2>Les plus demandés</h2>
		 <table>
        <thead>
            <tr>
               <!--  <th>Numéro</th> -->
                <th>Description</th>
                <th>Pays de départ</th>
                <th>Ville de départ</th>
                <th>Ville d'arrivée</th>
                <th>Durée du circuit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %}
            <tr>
              <!--    <td><a href="{# {{ path('circuit_show', { 'id': circuit.id }) }}">{{ circuit.id }} #}</a></td>-->
